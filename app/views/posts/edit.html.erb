<% provide(:title, 'Edit Post') %>
<h1>Edit Post</h1>
<%= form_for @post do |f| %>
<p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %><br/>
</p>
<p>
    <%= f.label :summary%><br/>x
    <%= f.text_field :summary %><br/>
</p>
<p>
    <%= f.label :content%><br/>
    <%= f.text_area :content %><br/>
</p>
<p>
   <%= f.label :image %><br />
   <%= f.file_field :image, class: "form-control" %> 
</p>
<p>
    <%= f.label :public %>
    <%= f.check_box :public %><br/>
</p>
<p>
<%= f.submit %>
</p>
<% end %>